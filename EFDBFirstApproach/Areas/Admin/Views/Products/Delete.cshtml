@model EFDBFirstApproach.Models.Product
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<h2>Delete</h2>

<form action="/admin/products/delete/@Model.ProductID" method="post">
    <div class="row">
        <div class="form-group col-md-6">
            <label for="ProductName">Product Name</label>
            <input type="hidden" name="ProductID" value="@Model.ProductID"/>
            @Model.ProductName
        </div>
        <div class="form-group col-md-6">
            <label for="Price">Price</label>
            @Model.Price
        </div>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-danger" href="/admin/products/index">Cancel</a>
</form>