@model EFDBFirstApproach.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";

}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.LabelFor(temp => temp.Username)
            @Html.TextBoxFor(temp => temp.Username, new { @class = "form-control", placeholder = "User Name" })
            @Html.ValidationMessageFor(temp => temp.Username)
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(temp => temp.Password)
            @Html.PasswordFor(temp => temp.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(temp => temp.Password)
        </div>
    </div>
    @Html.ValidationSummary()
    <button type="submit" class="btn btn-success">Login</button>
}
