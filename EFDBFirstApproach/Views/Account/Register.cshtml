@model EFDBFirstApproach.View_Models.RegisterVIewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
<div class="form-row">
    <div class="form-group col-md-6">
        @Html.LabelFor(temp => temp.UserName)
        @Html.TextBoxFor(temp => temp.UserName, new { @class = "form-control", placeholder = "User Name" })
        @Html.ValidationMessageFor(temp => temp.UserName)
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(temp => temp.Password)
        @Html.TextBoxFor(temp => temp.Password, new { @class = "form-control", placeholder = "Password" })
        @Html.ValidationMessageFor(temp => temp.Password)
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(temp => temp.ConfirmPassword)
        @Html.TextBoxFor(temp => temp.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
        @Html.ValidationMessageFor(temp => temp.ConfirmPassword)
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(temp => temp.Email)
        @Html.TextBoxFor(temp => temp.Email, new { @class = "form-control", placeholder = "Email ID" })
        @Html.ValidationMessageFor(temp => temp.Email)
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(temp => temp.Mobile)
        @Html.TextBoxFor(temp => temp.Mobile, new { @class = "form-control", placeholder = "Mobile Number" })
        @Html.ValidationMessageFor(temp => temp.Mobile)
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(temp => temp.Address)
        @Html.TextBoxFor(temp => temp.Address, new { @class = "form-control", placeholder = "Address" })
        @Html.ValidationMessageFor(temp => temp.Address)
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(temp => temp.DateOfBirth)
        @Html.TextBoxFor(temp => temp.DateOfBirth, new { @class = "form-control", placeholder = "Date of birth" })
        @Html.ValidationMessageFor(temp => temp.DateOfBirth)
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(temp => temp.City)
        @Html.TextBoxFor(temp => temp.City, new { @class = "form-control", placeholder = "City" })
        @Html.ValidationMessageFor(temp => temp.City)
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(temp => temp.Country)
        @Html.TextBoxFor(temp => temp.Country, new { @class = "form-control", placeholder = "Country" })
        @Html.ValidationMessageFor(temp => temp.Country)
    </div>

    @Html.ValidationSummary() 
    <button type="submit" class="btn btn-success">Register</button>
</div>
}

